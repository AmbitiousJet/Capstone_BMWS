<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_margin="5dp"
        android:layout_marginTop="32dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:id="@+id/explore_item_show"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/primaryColor" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/explore_item_show"
                android:backgroundTint="@android:color/white"
                android:id="@+id/relativeLayout">

                <TextView
                    android:id="@+id/show_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView4"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:background="@android:color/white"
                    android:backgroundTint="@android:color/white"
                    android:text="SHOWWWWWWWW"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_alignStart="@+id/show_name"
                    android:text="Go to imdb" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="17dp"
                    android:src="@mipmap/show" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView2"
        android:layout_margin="5dp"
        android:layout_marginTop="32dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:id="@+id/explore_item_song"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:background="@color/secondaryDarkColor" />

            <RelativeLayout
                android:layout_below="@id/explore_item_song"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@android:color/white">

                <TextView
                    android:id="@+id/song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/imageView5"
                    android:background="@android:color/white"
                    android:text="SONG"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/song_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_alignStart="@+id/song_name"
                    android:text="Listen on Youtube" />


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/song_name"
                    android:layout_marginStart="17dp"
                    android:src="@mipmap/song" />


            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">


            <ImageView
                android:id="@+id/explore_item_place"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/primaryLightColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/explore_item_place"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="131dp"
                android:backgroundTint="@android:color/white">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="17dp"
                    android:src="@mipmap/place" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/place_name"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:text="Go to website" />

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_alignTop="@+id/imageView2"
                    android:background="@android:color/white"
                    android:text="PLACE"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>