<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="3dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/user_results_padding_margin"
    android:orientation="vertical"
    android:padding="@dimen/user_results_padding_margin">

    <Button
        android:visibility="visible"
        android:id="@+id/confirm"
        android:background="@drawable/button_hollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginStart="11dp"
        android:text="Confirm" />
    <Button
        android:id="@+id/cancel"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time"
        android:layout_alignStart="@+id/confirm"
        android:background="@android:color/holo_red_dark"
        android:text="Cancel"
        android:textColor="@color/secondaryLightColor" />

    <Button
        android:visibility="visible"
        android:id="@+id/deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time"
        android:layout_alignStart="@+id/confirm"
        android:background="@android:color/holo_red_dark"
        android:text="Deny"
        android:textColor="@color/secondaryLightColor" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/primaryDarkColor"
        android:id="@+id/user_notification_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/user_avatar_user_notification"
        android:padding="@dimen/user_results_view_padding"
        android:text="Naima accepted!"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/user_avatar_user_results" />


    <TextView
        android:id="@+id/invite_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/confirm"
        android:text="123 St Ave"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_avatar_user_notification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/woman" />

    <ImageView
        android:text="Accepted"
        android:visibility="invisible"
        android:textAlignment="center"
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_check_circle_green_a700_18dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/invite_item_location"
        android:padding="@dimen/user_results_view_padding"
        android:text="March 20, 2018"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/user_avatar_user_results"
        app:layout_constraintTop_toBottomOf="@id/user_results_user_name" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_toEndOf="@+id/date"
        android:padding="@dimen/user_results_view_padding"
        android:text="8:30pm"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/user_avatar_user_results"
        app:layout_constraintTop_toBottomOf="@id/learning_field" />

</RelativeLayout>

</android.support.v7.widget.CardView>


