<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondaryDarkColor" />
            <corners android:radius="8dp" />
            <stroke android:width="1px" android:color="@color/secondaryColor" />
        </shape>

    </item>
    <item>

        <shape android:shape="rectangle">
            <solid android:color="@color/secondaryLightColor" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="@color/secondaryDarkColor" />
        </shape>

    </item>
</selector>
